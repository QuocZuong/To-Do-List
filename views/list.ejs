<%- include("header") -%>

    <div class="container">

    <div class="box" id="heading">
        <h1> <%=header %> </h1>
    </div>

    <div class="box" id="">
        <% for(let i = 0; i < newListItems.length; i++){ %>
            <div class="item">
            <input type="checkbox">
                <p> <%= newListItems[i]%> </p>
            </div>
            <% } %>

        <form action="/" method="post" class="item input">
            <input type="text" name="newItem" placeholder="New Item" autocomplete = "off" required autofocus>
            <button type="submit" name="button" value= <%= header %> >+</button>
        </form>
    </div>
    
    <%- include("footer") -%>
    </div>

